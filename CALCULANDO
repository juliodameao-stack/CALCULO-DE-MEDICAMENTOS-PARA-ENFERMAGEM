<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Calculadora de Enfermagem</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 30px; }
    input { margin: 5px; padding: 5px; }
    button { margin: 10px; padding: 10px; }
    .resultado { margin-top: 20px; font-weight: bold; }
  </style>
</head>
<body>
  <h2>Calculadora de Enfermagem</h2>

  <!-- Regra de 3 -->
  <h3>Regra de 3</h3>
  <label>Valor 1:</label><input type="number" id="valor1"><br>
  <label>Valor 2:</label><input type="number" id="valor2"><br>
  <label>Valor 3:</label><input type="number" id="valor3"><br>
  <button onclick="calcularRegra3()">Calcular</button>
  <div class="resultado" id="resultadoRegra3"></div>

  <!-- Infus達o de Soro -->
  <h3>Infus達o de Soro</h3>
  <label>Volume (ml):</label><input type="number" id="volume"><br>
  <label>Tempo (horas):</label><input type="number" id="tempo"><br>
  <button onclick="calcularSoro()">Calcular</button>
  <div class="resultado" id="resultadoSoro"></div>

  <script>
    function calcularRegra3() {
      let v1 = parseFloat(document.getElementById("valor1").value);
      let v2 = parseFloat(document.getElementById("valor2").value);
      let v3 = parseFloat(document.getElementById("valor3").value);

      if (!isNaN(v1) && !isNaN(v2) && !isNaN(v3)) {
        let resultado = (v2 * v3) / v1;
        document.getElementById("resultadoRegra3").innerText = "Resultado: " + resultado.toFixed(2);
      } else {
        document.getElementById("resultadoRegra3").innerText = "Preencha todos os campos!";
      }
    }

    function calcularSoro() {
      let volume = parseFloat(document.getElementById("volume").value);
      let tempo = parseFloat(document.getElementById("tempo").value);

      if (!isNaN(volume) && !isNaN(tempo) && tempo > 0) {
        let mlPorHora = volume / tempo;
        let gotasPorMin = (volume * 20) / (tempo * 60); // 20 gotas/ml padr達o
        document.getElementById("resultadoSoro").innerText =
          "Infus達o: " + mlPorHora.toFixed(2) + " ml/h | " + gotasPorMin.toFixed(2) + " gotas/min";
      } else {
        document.getElementById("resultadoSoro").innerText = "Preencha todos os campos!";
      }
    }
  </script>
</body>
</html>
